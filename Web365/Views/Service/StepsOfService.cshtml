@model IEnumerable<Web365Domain.Service.StepOfServiceItem>
@if (Model != null && Model.Any())
{
    <h2 class="sp-dtsv-htit">Quy trình @ViewBag.Title</h2>
    for (var i = 0; i < Model.Count(); i++)
    {
        <div class="sp-dtsv-bcol">
            <div class="sp-dtsv-table">
                <ul class="sp-dtsv-tr sp-dtsv-thead">
                    <li>Bước</li>
                    <li>Liệu trình</li>
                    <li>Công dụng</li>
                </ul>
                <ul class="sp-dtsv-tr sp-dtsv-tbody">
                    <li>@(i + 1)</li>
                    <li>
                        @Html.Raw(Model.ElementAt(i).Course)
                    </li>
                    <li>
                        @Html.Raw(Model.ElementAt(i).Uses)
                    </li>
                </ul>
            </div>
            <div id="sp-dtsv-b1" class="sp-dtsv-slide carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    @foreach (var image in Model.ElementAt(i).SlidesPictureItems)
                    {
                        <div class="item @(image == Model.ElementAt(i).SlidesPictureItems.First() ? "active" :string.Empty )">
                            <img src="@Web365Utility.Web365Utility.GetPathPicture(image.FileName)" alt="@image.Summary">
                        </div>
                    }
                </div>
                <a class="left carousel-control" href="#sp-dtsv-b1" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span><span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#sp-dtsv-b1" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span><span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }
}
