@model Web365Models.ListArticleModel

@if (Model != null && Model.List != null && Model.List.Any())
{
    <div class="sp-lsvb">
        <h2 class="sp-lsvb-tit">Quy trình chăm sóc toàn diện mẹ và bé</h2>
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            @for (var i = 0; i < Model.List.Count(); i++)
            {
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="heading1">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-@i" aria-expanded="@(i== 0 ? "true":"false")" aria-controls="collapse1" class="collapsed">
                                <span>@(i + 1)</span><p>@Model.List.ElementAt(i).Title</p>
                            </a>
                        </h4>
                    </div>
                    <div id="collapse-@i" class="panel-collapse collapse @(i == 0 ? "in" : string.Empty)" role="tabpanel" aria-labelledby="heading1" aria-expanded="@(i== 0 ? "true":"false")">
                        <div class="panel-body">
                            @Html.Raw(Model.List.ElementAt(i).Detail)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}